                <Label Text="" FontSize="50" FontFamily="avenir-light" TextColor="white" HorizontalOptions="CenterAndExpand"/>
                <Label Text="" FontSize="50" FontFamily="avenir-light" TextColor="white" HorizontalOptions="CenterAndExpand"/>

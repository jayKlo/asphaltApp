<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="asphaltApp.LoginPage" x:Name="Login" BackgroundImage="LoginBackground">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" Clicked="OnSignUpButtonClicked" />
    </ContentPage.ToolbarItems>       
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Spacing="15" Padding="10" >
            <Label Text="Asphalt" FontSize="50" FontFamily="avenir-light" TextColor="white" HorizontalOptions="Center"/>
            <Label Text="Colorado's Road Hazard Reporting App" FontSize="18" FontFamily="avenir-light" TextColor="white" HorizontalOptions="Center"/>
            <Label Text="" FontSize="Large" TextColor="white" HorizontalOptions="Center"/>
            <Label Text="Email" FontSize="Large" TextColor="white" HorizontalOptions="Center"/>
            <Entry x:Name="emailEntry" Placeholder="email" />
            <Label Text="Password" FontSize="Large" TextColor="white" HorizontalOptions="Center" />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="password" />
            <Label Text=""/> 
            <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="#acaeaf" BorderColor="white" BorderWidth="1" TextColor="white" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>